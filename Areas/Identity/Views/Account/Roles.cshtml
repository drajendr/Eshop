@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole> 
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>List of Roles</h1>  
<p>
    <a class="btn btn-primary" asp-controller="Account" asp-area="Identity" asp-action="CreateRole">Create New</a>
</p>
<table class="table">  
    <thead>  
        <tr>  
            <td>Id</td>  
            <td>Name</td>  
        </tr>  
    </thead>  
    <tbody>  
        @foreach (var role in Model)  
        {  
            <tr>  
                <td>@role.Id</td>  
                <td>@role.Name</td>  
            </tr>  
        }  
    </tbody>  
</table>  